<div class="wrapper fadeInDown">
  <div id="formContent">
    <div>
      <h2>房间</h2>
    </div>
    <%= form_with(model: @room, local: true, class: 'form-group') do |form| %>
      <% if @room.errors.any? %>
        <% @room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>

      <%= form.text_field :url, placeholder: '歌单链接', class: 'styled-input' %>
      <%= form.submit '创建', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>