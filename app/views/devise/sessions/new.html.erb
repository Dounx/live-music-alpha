<div class="wrapper fadeInDown">
  <div id="formContent">
    <div>
      <h2>用户登陆</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '邮箱', class: 'styled-input' %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: '密码', class: 'styled-input' %>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :记住我 %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit '登陆' %>
      </div>
    <% end %>

    <div id="formFooter">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
